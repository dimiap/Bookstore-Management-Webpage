@model IEnumerable<Ergasia.Models.Report2>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}


@using (Html.BeginForm("Index", "Report2", FormMethod.Get))
{
    <h2> Choose the order date and the store name so the orders information to appear</h2>
    <div class="form-horizontal">
        <div class="form-group input-group-sm">
            <div class="col-md-8">
                <p> Chosen Format: MM/DD/YYYY </p>
                @Html.Label("From date")
                @Html.TextBox("date_from", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class="col-md-8">
                @Html.Label("To date")
                @Html.TextBox("date_to", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group form-group-sm">
            <div class="col-md-8">
                <p> Chosen Format: characters </p>
                @Html.Label("Store")
                @Html.TextBox("store", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group-sm">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" /> <span> </span>
            </div>
        </div>
    </div>
}

<center>
    <table class="table table-striped">
        <tr>
            <td> Order Number </td>
            <td> Store Name </td>
            <td> Title </td>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color: red">
                    No match any document
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td> @item.salesdetails.ord_num</td>
                    <td> @item.storesdetails.stor_name</td>
                    <td> @item.titledetails.title</td>
                </tr>
            }
        }
    </table>
</center>
