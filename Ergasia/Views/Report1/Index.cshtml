@model IEnumerable<Ergasia.Models.Report1>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}


@using (Html.BeginForm("Index", "Report1", FormMethod.Get))
{
 
        <h2> Choose a date in order for the authors information to appear</h2>
        <div class="form-horizontal">

            <div class="form-group input-group-sm">
                <div class="col-md-8">
                    <p> Chosen Format: MM/DD/YYYY (Month-Day-Year) </p>
                    @Html.Label("From date")

                    @Html.TextBox("date_from", null, new { @class = "form-control datepicker" })
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-md-8">
                    @Html.Label("To date")
                    @Html.TextBox("date_to", null, new { @class = "form-control datepicker" })
                </div>
            </div>
            <div class="form-group form-group-sm">
                <div class="col-md-8">
                    @Html.Label("Top:")
                    @Html.TextBox("t", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group-sm">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search" class="btn btn-default" /> <span> </span>
                </div>
            </div>
        </div>
       

        }

        <center>
            <table class="table table-striped">
                <tr>
                    <td> Last Name </td>
                    <td> First Name </td>
                    <td> Title </td>
                    <td> Sale </td>
                    <td> Date </td>
                    <td> Phone </td>
                    <td> Address </td>
                    <td> City </td>
                    <td> State </td>
                    <td> Zip </td>
                </tr>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="3" style="color: red">
                            No match any document
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.authorsdetails.au_lname</td>
                            <td> @item.authorsdetails.au_fname</td>
                            <td> @item.titledetails.title</td>
                            <td> @item.titledetails.ytd_sales</td>
                            <td> @item.titledetails.pubdate</td>
                            <td> @item.authorsdetails.phone</td>
                            <td> @item.authorsdetails.address</td>
                            <td> @item.authorsdetails.city</td>
                            <td> @item.authorsdetails.state</td>
                            <td> @item.authorsdetails.zip</td>
                        </tr>
                    }
                }
            </table>
        </center>


